{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["esnext", "dom"],
    "paths": {
      "@/*": [ "src/*" ]
    },
    "typeRoots": ["./node_modules/@types/", "./node_modules/*/node_modules/@types/", "./src/types/"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["node_modules"],
  "plugins": [
    {
      "name": "@vuedx/typescript-plugin-vue"
    }
  ]
}
